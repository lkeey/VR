CREATE TABLE game (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    description TEXT,
    image BLOB NOT NULL,
    video_path TEXT,
    category TEXT NOT NULL
);

-- Insert a new game
insertGame:
INSERT INTO game(name, description, image, video_path, category)
VALUES (?, ?, ?, ?, ?);

-- Delete a game by id
deleteGameById:
DELETE FROM game WHERE id = ?;

-- Select all games
selectAllGames:
SELECT * FROM game;

-- Select games by category
selectGamesByCategory:
SELECT * FROM game WHERE category = ?;

